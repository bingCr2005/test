@model IEnumerable<test.Models.Product>

<h2>Danh sách sản phẩm (từ DI tĩnh)</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên sản phẩm</th>
            <th>Danh mục</th>
            <th>Giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.CategoryName</td>
                <td>@p.Price.ToString("N0") đ</td>
            </tr>
        }
    </tbody>
</table>
